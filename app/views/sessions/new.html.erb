<h1>Log In</h1>

<%= form_for :session, url: login_path do |f| %>
  <% if flash[:alert] %>
    <div id="error_explanation">
      <p><%= flash[:alert] %></p>
    </div>
  <% end %>

  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit "Log In" %>
  </p>
<% end %>
